
@{
    ViewBag.Title = ViewBag.Photo.Title + " - 图片";
    ViewBag.Name = ViewBag.Info.Name;
    var photo = ViewBag.Photo;
}

<div class="grid">
    <div class="row cells5">
        <!--左-->
        <div class="cell" style="padding:5px">
            <div class="cell">
                <div data-role="calendar"></div>
            </div>
            <br />
            <div class="panel">
                <div class="heading">
                    <span class="title">相册类别</span>
                </div>
                <div class="content padding10">
                    <ul class="simple-list">
                        @foreach (var type in ViewBag.Types)
                        {
                            <li><a href="/Photo/Category/@type.Id?p=1">@type.Type</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!--中-->
        <div class="cell colspan3">
            <ul class="breadcrumbs2">
                <li><a href="/Home/Index"><span class="icon mif-home"></span></a></li>
                <li><a href="/Photo/Index">相册</a></li>
                <li><a href="/Photo/Category/@photo.PhotoTypeId">@ViewBag.Type</a></li>
                <li><a href="/Photo/Detail/@photo.Id">详情</a></li>
            </ul>
            <div style="text-align:center">
                <h3>@photo.Title</h3><br />
                <p style="font-size:small">@photo.SubTime</p>
            </div>
            <hr /><br />
            <p><a href="@photo.Url" target="_blank"><img src="@photo.Url" style="width:auto" /></a></p>
            <hr /><br />
            <div class="example" data-text="描述" style="word-break:normal;word-wrap:break-word">
                @photo.Remark
                <br /><br />
            </div>
        </div>
        @Html.Partial("_advertising")
    </div>
</div>


