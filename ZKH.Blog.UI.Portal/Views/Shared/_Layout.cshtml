<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="ZKH's Blog">
    <meta name="keywords" content="HTML, CSS, JS, JavaScript, framework, metro, front-end, frontend, web development, blog">
    <meta name="author" content="ZKH">
    @*<link rel='shortcut icon' type='image/x-icon' href='~/Content/images/favicon.ico' />*@
    <title>@ViewBag.Title - @ViewBag.Name</title>
    <link href="~/Content/css/metro.css" rel="stylesheet">
    <link href="~/Content/css/metro-icons.css" rel="stylesheet">
    <link href="~/Content/css/metro-responsive.css" rel="stylesheet">
    <script src="~/Content/js/jquery-2.1.3.min.js"></script>
    <script src="~/Content/js/metro.js"></script>
</head>
<body>
        <!--头部-->
        <header style="margin-bottom:20px;background-image:url('/Content/images/10813.png')">
            <div class="clear-float">
                <div class="place-right">
                    <form action="//cn.bing.com/search" target="_blank">
                        <div class="input-control text margin20" style="width: 300px">
                            <input type="text" name="q" placeholder="必应搜索">
                            <button class="button"><span class="mif-search"></span></button>
                        </div>
                    </form>
                </div>
                <a class="place-left" style="margin:6px 40px" href="/Home/Index" title="">
                    <h1 style="color:#f9f9f9">@ViewBag.Name</h1>
                </a>
            </div>
            <div class="main-menu-wrapper">
                <ul class="horizontal-menu" style="margin-left: 0px 30px">
                    <li><a href="/Home/Index">首页</a></li>
                    <li><a href="/Article/Index">文章</a></li>
                    <li><a href="/Photo/Index">相册</a></li>
                    <li><a href="/Home/Author">作者</a></li>
                    <li><a href="/Home/Connect">联系</a></li>
                    <li><a href="/Home/About">关于</a></li>
                    <li class="place-right">
                        <a href="/Admin/Index">登录</a>
                    </li>
                </ul>
            </div>
        </header>
        <!--Body-->
        <div style="margin:0px 10px">
            @RenderBody()
        </div>
    <div>
        <footer style="background-color:#dddddd">
            <div class="bottom-menu-wrapper">
                <ul class="horizontal-menu compact">
                    <li><a>&copy; @DateTime.Now.Year HXTech</a></li>
                    <li class="place-right"><a href="#">隐私</a></li>
                    <li class="place-right"><a href="#">法律</a></li>
                    <li class="place-right"><a href="#">广告</a></li>
                    <li class="place-right"><a href="#">帮助</a></li>
                    <li class="place-right"><a href="#">反馈</a></li>
                </ul>
            </div>
        </footer>
    </div>
</body>
</html>
